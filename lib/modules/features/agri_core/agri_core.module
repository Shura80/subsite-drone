    if (isset($form['og_group_ref'])) {
      $form['og_group_ref']['#attributes']['class'] = array();
      $form['og_group_ref']['#access'] = TRUE;
    }
  }

  if ($form['#id'] == 'views-exposed-form-og-members-admin-default') {
